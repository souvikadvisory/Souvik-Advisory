<script>
fetch('../posts.json')
.then(response => response.json())
.then(data => {
let container = document.getElementById('posts');
data.forEach(post => {
container.innerHTML += `
<div class="post">
<h2><a href="../posts/${post.slug}.html">${post.title}</a></h2>
<p>${post.date}</p>
</div>
`;
});
});
</script>

